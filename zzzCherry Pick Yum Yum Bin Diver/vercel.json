{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/resume/export-pdf/route.ts": {
      "maxDuration": 60,
      "memory": 2048
    },
    "src/app/api/marketing/analyze-resume/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup-old-recordings",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/reminders",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/webhook-retries",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/expire-offers",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/remind-expiring-offers",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/remind-onboarding-deadlines",
      "schedule": "0 9 * * *"
    }
  ]
}
